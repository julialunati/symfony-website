<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{asset('assets/framework/fontawesome-5.15.4/css/all.min.css') }}">
			<link rel="stylesheet" href="{{asset('assets/framework/bootstrap-4.1.3/css/bootstrap.min.css') }}">
			<link rel="stylesheet" href="{{asset('assets/main/css/style.css') }}">
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<a class="navbar-brand" href="{{ path('home') }}">
				<i class="fas fa-ellipsis-h"></i>
			</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarText">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item active">
						<a class="nav-link" href="{{ path('home') }}">Home
							<span class="sr-only">(current)</span>
						</a>
					</li>
					<li class="nav-item">
						{% if is_granted('ROLE_ADMIN') %}
							<a class="nav-link" href="{{ path('admin') }}">Admin panel</a>
						{% endif %}
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">Features</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">Pricing</a>
					</li>
				</ul>
				<span class="navbar-text">
					{% if app.user %}
						<a class="btn btn-sm btn-outline-secondary" href="{{ path('app_logout') }}">Logout</a>
					{% else %}
						<a class="btn btn-sm btn-outline-secondary" href="{{ path('app_login') }}">Login</a>
					{% endif %}
				</span>
			</div>
		</nav>
		{% block body %}{% endblock %}
		{% block javascripts %}
			<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
			<script src="{{ asset('assets/framework/vue/vue.js') }}"></script>
			<script src="{{ asset('assets/framework/bootstrap-4.1.3/js/bootstrap.min.js') }}"></script>
			{% block addJs %}{% endblock %}
		{% endblock %}
	</body>
</html>
